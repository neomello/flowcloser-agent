# === CORE CONFIGURATION ===
IQAI_API_KEY=your_iqai_api_key_here
PORT=8042
WEBHOOK_VERIFY_TOKEN=flowcloser_webhook_neo

# === LLM PRIORITY CHAIN ===
# Primary model
LLM_MODEL=gpt-4o-mini
# Fallback model (used if primary fails)
LLM_MODEL_FALLBACK=gemini-2.0-flash

# API Keys for LLM Providers
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# === META / INSTAGRAM CONFIGURATION ===
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=https://your-app.up.railway.app/api/auth/instagram/callback

# Default Account (Fallback)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_PAGE_ID=your_page_id

# Support for Multiple Accounts (JSON Format)
# Example: [{"account_name":"Main","page_id":"123","page_access_token":"token","platform":"instagram"}]
INSTAGRAM_ACCOUNTS=[]

# Meta Webhook Security (Optional)
META_CLIENT_CERT_CN=client.webhooks.fbclientcerts.com
# Use META_APP_SECRET if different from INSTAGRAM_APP_SECRET for signature validation
META_APP_SECRET=your_meta_app_secret

# === WHATSAPP CONFIGURATION ===
# Provider choices: 'meta' or 'twilio'
WHATSAPP_PROVIDER=meta

# Meta WhatsApp Cloud API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Twilio WhatsApp API
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# === AGENT SPECIFIC CONFIG ===
# Link for the fast proposal template
PROPOSAL_TEMPLATE_LINK=https://drive.google.com/file/d/1Q7vSrjMm5_DbtVFhbVNoRyym4Z7xVh9Z/view

# === STORACHA / IPFS (DECENTRALIZED STORAGE) ===
# UCAN proof base64
STORACHA_UCAN=your_storacha_ucan_base64
# Space DID
STORACHA_SPACE_DID=did:key:your_space_did
STORACHA_DID=did:key:your_agent_did

# === DEPLOYMENT / ENVIRONMENT ===
RAILWAY_URL=https://railway.com/project/your-project-id
# Used for Swagger Documentation URL
RAILWAY_STATIC_URL=flowcloser-agent-production.up.railway.app

# === OTHER WEB3 INTEGRATIONS (OPTIONAL) ===
KWIL_PROVIDER=https://provider.kwil.com
CERAMIC_NODE=https://ceramic-clay.3boxlabs.com
PINATA_JWT=your_pinata_jwt
DID=did:key:your_did
TREASURY_WALLET=0x...